<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
	<TextView
        android:id="@+id/tv_listview_itemid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/listviewitem_textsize"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_listview_itemname"
        android:layout_width="0dp"
        android:layout_height="@dimen/listviewitem_etcontent"
        android:layout_weight="1"
		android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textSize="@dimen/listviewitem_textsize" />

    <EditText
        android:id="@+id/et_listview_count"
        android:layout_width="0dp"
        android:layout_height="@dimen/listviewitem_etcontent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:hint="@string/item_counts"
        android:textSize="@dimen/listviewitem_textsize" />

    <EditText
        android:id="@+id/et_listview_costtime"
        android:layout_width="0dp"
        android:layout_height="@dimen/listviewitem_etcontent"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:hint="@string/item_costtime"
        android:textSize="@dimen/listviewitem_textsize" />

</LinearLayout>